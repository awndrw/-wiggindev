{
    "private": true,
    "packageManager": "yarn@3.2.1",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "yarn workspace @wiggindev/utils run build && yarn workspace @wiggindev/hooks run build",
        "dev": "yarn workspaces foreach run dev",
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "test": "jest --passWithNoTests",
        "format": "eslint --fix . && prettier --write ."
    },
    "devDependencies": {
        "@jest/types": "^28.1.0",
        "@types/eslint": "^8",
        "@types/jest": "^27.5.1",
        "@types/node": "^17.0.33",
        "@types/prettier": "^2",
        "@types/rimraf": "^3",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "jest": "^28.1.0",
        "jest-environment-jsdom": "^28.1.0",
        "lint-staged": "^12.4.1",
        "pinst": "^3.0.0",
        "prettier": "^2.6.2",
        "ts-jest": "^28.0.2",
        "ts-node": "^10.7.0",
        "typescript": "4.4.4"
    }
}
