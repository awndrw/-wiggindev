{
    "name": "@wiggindev",
    "private": true,
    "packageManager": "yarn@3.2.1",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "yarn workspace @wiggindev/utils run build && yarn workspace @wiggindev/hooks run build",
        "dev": "yarn workspaces foreach run dev",
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable",
        "lint": "tsc --noEmit && eslint .",
        "format": "eslint --fix . && prettier --write .",
        "foreach": "yarn workspaces foreach --exclude @wiggindev",
        "version:patch": "yarn foreach -- version patch",
        "publish": "yarn foreach -- npm publish --tolerate-republish",
        "patch": "yarn lint && yarn build && yarn format && yarn version:patch && yarn publish"
    },
    "devDependencies": {
        "@types/eslint": "^8",
        "@types/prettier": "^2",
        "@types/rimraf": "^3",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "lint-staged": "^12.4.1",
        "pinst": "^3.0.0",
        "prettier": "^2.6.2",
        "typescript": "^4.6.4"
    }
}
